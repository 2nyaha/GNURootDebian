<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gnuroot.debian"
    android:installLocation="preferExternal"
    android:versionCode="5"
    android:versionName="0.1.2" >
    
    <supports-screens android:resizeable="true"
                      android:smallScreens="true"                       
                      android:normalScreens="true"                       
                      android:largeScreens="true"
                      android:xlargeScreens="true"
                      android:anyDensity="true"/>
    <uses-sdk
        android:minSdkVersion="4"
        android:maxSdkVersion="21"
        android:targetSdkVersion="19" />
    
    <uses-feature android:name="android.hardware.touchscreen" android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.android.vending.CHECK_LICENSE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat">
        <activity
            android:name="com.gnuroot.debian.GNURootMain"
            android:label="@string/app_name" 
        	android:launchMode="singleTask"
            android:configChanges="keyboard|keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <service
            android:name="com.gnuroot.debian.GNURootService"
            android:exported="true">
			<intent-filter>
				<action android:name="com.gnuroot.debian.INSTALL_TAR" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:scheme="content"/>
				<data android:mimeType="application/x-tar"/>
			</intent-filter>
			<intent-filter>
				<action android:name="com.gnuroot.debian.INSTALL_TAR" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:scheme="file"/>
				<data android:mimeType="application/x-tar"/>
			</intent-filter>
			<intent-filter>
				<action android:name="com.gnuroot.debian.RUN_SCRIPT_STR" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
			<intent-filter>
				<action android:name="com.gnuroot.debian.INSTALL_PACKAGES" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
			<intent-filter>
				<action android:name="com.gnuroot.debian.CHECK_STATUS" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</service>
		
        <activity android:name="jackpal.androidterm.Term"
                android:theme="@style/Theme.AppCompat"
                android:launchMode="singleTask"
                android:configChanges="keyboard|keyboardHidden|orientation"
                android:windowSoftInputMode="adjustResize|stateAlwaysVisible">
        </activity>
        <activity-alias android:name="TermInternal"
                android:targetActivity="jackpal.androidterm.Term"
                android:exported="false">
            <intent-filter>
                <action android:name="jackpal.androidterm.private.OPEN_NEW_WINDOW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="jackpal.androidterm.private.SWITCH_WINDOW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity-alias>
        <activity android:name="jackpal.androidterm.RemoteInterface"
                android:excludeFromRecents="true">
            <intent-filter>
                <action android:name="jackpal.androidterm.OPEN_NEW_WINDOW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity-alias android:name="jackpal.androidterm.RunScript"
                android:targetActivity="jackpal.androidterm.RemoteInterface">
            <intent-filter>
                <action android:name="jackpal.androidterm.RUN_SCRIPT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity-alias>
        <activity android:name="jackpal.androidterm.TermPreferences"
                android:label="@string/preferences"/>
        <activity android:name="jackpal.androidterm.WindowList"
                android:label="@string/window_list" />
        <service android:name="jackpal.androidterm.TermService" />
        
        <activity android:name="com.gnuroot.debian.GNURootDownloaderActivity"
                android:excludeFromRecents="true"
                android:configChanges="keyboard|keyboardHidden|orientation">
        </activity>
        <service android:name="com.gnuroot.debian.GNURootDownloaderService" />
        <receiver android:name="com.gnuroot.debian.GNURootAlarmReceiver" />
    </application>

</manifest>